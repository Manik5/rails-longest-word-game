<h1>New Game</h1>


<div class="container"><% @letters.each do |letter| %>
    <div class="letter-color">
     <%= letter %>
    </div>
    <% end  %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%#= hidden_field_tag :grid, @letters %>
  <input id="tags_list" name="grid" type="hidden" value="<%= @letters %>" />
  <h2>What is the longest word you can find?</h2>
  <input type="text" class="text-info" name="name" placeholder="Put a word">
  <input type="submit" class="play" value="Play">
</form>

